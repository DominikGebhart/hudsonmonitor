body {
	margin: 0;
	left: 0;
	top: 0;
	right: 0;
	bottom: 0;
    width: 132px;
    height: 209px;	
	font-family: Arial, Helvetica, sans-serif;
	font-size: 11px;
	background-repeat: no-repeat;
}



p { 
	margin:0; 
	padding:0;
	overflow: hidden;
	white-space: nowrap; 
	float: left;
}

#titleLink {
	margin-top:10px;
	margin-bottom: 7px;
	font-family: Arial, Helvetica, sans-serif;
	font-size: 11px;
	font-weight: bold;
	text-decoration: none;
	overflow: hidden;
	white-space: nowrap;
	text-align: center;
	float:right;
}

.projectNavigation {
	margin-left: 10px;
	margin-top: 7px;
	margin-right:10px;
	font-family: Arial, Helvetica, sans-serif;
	font-size: 14px;
	font-weight: bold;
	text-decoration: none;
	filter: alpha(opacity=50);
	float:left;
}

.projectNavigation:hover { filter:alpha(opacity=100); }

.projectItemDocked {
  float: left;
	margin: 0;
	margin-top: 5px;
	margin-left: 10px;
	height: 30px;
	width: 110px;
	overflow: hidden;
	white-space: nowrap;
	clear: both;
	display: block;
	text-align: left;
}

.projectItemUndocked {
	float: left;
	margin: 0;
	margin-top: 5px;
	margin-left: 10px;
	height: 30px;
	width: 345px;
	overflow: hidden;
	white-space: nowrap;
	clear: both;
	display: block;
	text-align: left;
}

.projectItemDocked a, 
.projectItemDocked a:visited, 
.projectItemDocked a:link,
.projectItemUndocked a,
.projectItemUndocked a:visited,
.projectItemUndocked a:link
{
	font-weight: bold;
	text-decoration: none;
}

.projectItemUndocked a:hover, 
.projectItemDocked a:hover
{
	text-decoration: underline;
}

#navigation {
	margin-top: 11px;
	margin-left: 8px;
}

#leftarrow {
	display: block;
	font-size: 1px;
	background-repeat: no-repeat;
	background-position: 0 0;
	margin-top: 11px;
	width: 16px;
	height: 16px;
	float: left;
}

#leftarrow:hover { 
	background-position: 0 100%;
}

#position {
  margin-top: 11px;
	margin-left: 5px;
	width: 70px;
	text-align: center;
	overflow: hidden;
	white-space: nowrap;
	float: left;
	color: #FFFFFF;
}

#rightarrow {
	margin-top: 11px;
	margin-left: 6px;
	display: block;
	font-size: 1px;
	background-repeat: no-repeat;
	background-position: 0 0;
	width: 16px;
	height: 16px;
	float: left;
}

#rightarrow:hover { 
	background-position: 0 100%;
}

#message {
	/* background properties are set using javascript */
	background-position: 50% 0%;
	position: absolute;
	width: 120px;
	height: 142px;
	top: 33px;
	left: 5px;
	z-index: 10;
}

#message p {
	text-align: center;
	width: 100%;
	margin-top: 67px;
}
